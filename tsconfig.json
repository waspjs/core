{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "createElement"
  },
  "include": ["./src/*.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["src/views/**/*.ts"]
}
